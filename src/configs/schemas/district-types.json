{
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string"
    }
  },
  "additionalProperties": {
    "type": "object",
    "properties": {
      "activityRequirementModifier": {
        "type": "number",
        "description": "District type activity requirement modifier"
      },
      "parameters": {
        "type": "object",
        "description": "District type parameters",
        "properties": {
          "experience": {
            "$ref": "./common/geometric-progression.json",
            "description": "District type experience modifier (geometric)"
          },
          "money": {
            "$ref": "./common/geometric-progression.json",
            "description": "District type money modifier (geometric)"
          },
          "developmentPoints": {
            "$ref": "./common/geometric-progression.json",
            "description": "District type development points modifier (geometric)"
          },
          "influence": {
            "type": "object",
            "description": "District type faction influence values",
            "properties": {
              "requirements": {
                "$ref": "./common/geometric-progression.json",
                "description": "District type faction influence requirements for the next tier (geometric)"
              },
              "pointsMultiplier": {
                "$ref": "./common/geometric-progression.json",
                "description": "District type faction influence modifier (geometric)"
              }
            },
            "required": ["requirements", "pointsMultiplier"]
          },
          "synchronization": {
            "$ref": "./common/geometric-progression.json",
            "description": "District type synchronization modifier (geometric)"
          },
          "connectivity": {
            "type": "object",
            "description": "District type connectivity values",
            "properties": {
              "pointsMultiplier": {
                "$ref": "./common/geometric-progression.json",
                "description": "District type connectivity modifier for district points (geometric)"
              },
              "programPointsMultiplier": {
                "$ref": "./common/geometric-progression.json",
                "description": "District type connectivity modifier for program points (geometric)"
              }
            },
            "required": ["pointsMultiplier", "programPointsMultiplier"]
          },
          "codeBase": {
            "$ref": "#/$defs/multiplierBaseParameters",
            "description": "District type code base values"
          },
          "computationalBase": {
            "$ref": "#/$defs/multiplierBaseParameters",
            "description": "District type computational base values"
          },
          "rewards": {
            "$ref": "#/$defs/multiplierBaseParameters",
            "description": "District type rewards values"
          },
          "processCompletionSpeed": {
            "$ref": "./common/geometric-progression.json",
            "description": "District type process completion speed modifier (geometric)"
          },
          "experienceShareMultiplier": {
            "$ref": "./common/geometric-progression.json",
            "description": "District type experience share multiplier modifier (geometric)"
          }
        },
        "required": [
          "experience",
          "money",
          "developmentPoints",
          "influence",
          "synchronization",
          "connectivity",
          "codeBase",
          "computationalBase",
          "rewards",
          "processCompletionSpeed",
          "experienceShareMultiplier"
        ]
      }
    },
    "required": ["activityRequirementModifier", "parameters"]
  },
  "$defs": {
    "multiplierBaseParameters": {
      "type": "object",
      "properties": {
        "pointsMultiplier": {
          "$ref": "./common/geometric-progression.json",
          "description": "Points modifier (geometric)"
        },
        "pointsToSoftCap": {
          "type": "number",
          "description": "Points divisor"
        },
        "logBase": {
          "type": "number",
          "description": "Logarithmic base"
        }
      }
    }
  }
}
